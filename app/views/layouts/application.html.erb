<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Хорошие вопросы</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" integrity="sha384-T8Gy5hrqNKT+hzMclPo118YTQO6cYprQmhrYwIiQ/3axmI1hQomh7Ud2hPOy8SP1" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="header">
    <div class="container">
      <div class="header-logo">
        <h1 class="header-title"><%= link_to "Хорошие вопросы", root_path %></h1>
      </div>

      <div class="header-nav">
        <% if current_user %>
          <%= link_to "#{current_user.username}", user_path(current_user) %>
          <%= link_to "Выйти", session_path, data: { method: :delete } %>
        <% else %>
          <%= link_to 'Зарегистрироваться', new_user_path, class: 'button button-light button-small' %>
          <%= link_to 'Войти', new_sesion_path, class: 'button button-light button-small' %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="content">
    <div class="container">

      <% if flash.any? %>
        <div class="content-wrapper buffer-both">
          <% flash.each do |name, message| %>
            <%= content_tag :div, message, class: "flash-#{name}" %>
          <% end %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>

  </body>
</html>
